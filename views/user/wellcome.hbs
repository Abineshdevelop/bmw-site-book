  <script>
    // Reveal effects on scroll
    const onIntersect = (entries, obs) => {
      entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('reveal'); obs.unobserve(e.target); } });
    };
    const observer = new IntersectionObserver(onIntersect, { threshold: 0.2 });
    document.querySelectorAll('.card, #carReveal').forEach(el => observer.observe(el));
