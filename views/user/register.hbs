<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register - Dark Theme</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #121212;
      font-family: 'Segoe UI', sans-serif;
      color: #e0e0e0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .register-card {
      background-color: #1f1f1f;
      border-radius: 15px;
      padding: 1.5rem 2rem;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
      width: 480px;
      max-width: 520px;
      animation: fadeIn 0.6s ease;
    }
    .register-card .mb-3{ margin-bottom: 0.75rem !important; }
    .register-card .mb-4{ margin-bottom: 1rem !important; }




    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .form-control {
      background-color: #1a1a1a;
      color: #fff;
      border: 1px solid #3a3a3a;
    }

    .form-control::placeholder {
      color: #bbb;
    }

    .form-control:focus {
      background-color: #222;
      border-color: #fff;
      box-shadow: 0 0 0 0.2rem rgba(255,255,255,0.25);
      color: #fff;
    }

    .btn-register {
      background: #fff;
      border: 1px solid #fff;
      height: 50px;
      border-radius: 10px;
      font-weight: bold;
      color: #000;
      transition: background 0.25s ease, color 0.25s ease, filter 0.25s ease;
    }

    .btn-register:hover { background: #000; color: #fff; filter: brightness(1.05); }

    .password-toggle {
      position: absolute;
      right: 1rem;
      top: 2.8rem;
      cursor: pointer;
      color: #ccc;
    }

    a { color: #fff; }
    a:hover { color: #fff; text-decoration: underline; }

    .text-muted {
      color: #ccc !important;
    }
  </style>
</head>

<body>
  <form onsubmit="formValidation()" method="post" action="/user/register">
    <div class="register-card">
      <div class="text-center mb-3"><img src="https://upload.wikimedia.org/wikipedia/commons/4/44/BMW.svg" alt="BMW Logo" style="height:48px;"></div>
      <h2 class="text-center mb-3" style="color: #00bcd4;">Create Account</h2>
      <p class="text-center text-muted mb-4">Register to get started</p>

      <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="nameid" name="name" placeholder="Your full name">
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input class="form-control" id="email" name="email" placeholder="you@example.com">
      </div>

      <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input class="form-control" id="phone" name="phone" placeholder="10-digit phone number">
      </div>

      <div class="mb-3 position-relative">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Create a password">
        <i class="bi bi-eye password-toggle" onclick="togglePassword('password', this)"></i>
      </div>

      <div class="mb-3 position-relative">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
          placeholder="Re-enter your password">
        <i class="bi bi-eye password-toggle" onclick="togglePassword('confirmPassword', this)"></i>
      </div>

      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-register">Register</button>
      </div>

      <div class="text-center mt-3">
        <span style="color: #ccc;">Already have an account? </span>
        <a href="/user/login">Login</a>
      </div>
    </div>
  </form>


  <script>


    document.addEventListener('DOMContentLoaded', function () {
      document.querySelector('form').addEventListener('submit', formValidation);

    })


    function formValidation(e) {
      console.log("Functino called")
      e.preventDefault();
      var nameid = document.getElementById('nameid').value.trim()
      var email = document.getElementById('email').value.trim()
      var password = document.getElementById('password').value.trim()
      var confirmPassword = document.getElementById('confirmPassword').value.trim()
      var phone = document.getElementById('phone').value.trim()
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?#&])[A-Za-z\d@$!%*?#&]{8,}$/;

      const isValid = emailRegex.test(email);
      const passvalidate = passwordRegex.test(password);

      console.log("Email ", email)
      console.log("password", password)
      console.log("Confirm password ", confirmPassword)

      if (nameid == "" || email == "" || phone == "" || password == "" || confirmPassword == "") {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: "All fields are required!",
          timer: 2000,
          timerProgressBar: true,
          showConfirmButton: false,
          background: "#1f1f1f",
          color: "#e0e0e0",
          iconColor: "#ff5252"
        });

        return false
      } else if (password !== confirmPassword) {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: "Password does not match!",
          background: "#1f1f1f",
          color: "#e0e0e0",
          iconColor: "#ff5252",
          confirmButtonColor: "#00bcd4"
        });

        return false
      } else if (!isValid) {
        Swal.fire({
          icon: "error",
          title: "Invalid Email",
          text: "Enter a valid email!",
          background: "#1f1f1f",
          color: "#e0e0e0",
          iconColor: "#00bcd4",
          confirmButtonColor: "#00bcd4"
        });
        return false
      } else if (!passvalidate) {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          html: `
    <p>Password must meet the following:</p>
    <ul style="text-align: left; line-height: 1.7;">
      <li>✅ At least 8 characters</li>
      <li>✅ At least one lowercase letter (a–z)</li>
      <li>✅ At least one uppercase letter (A–Z)</li>
      <li>✅ At least one digit (0–9)</li>
      <li>✅ At least one special character: <code>@ $ ! % * ? # &</code></li>
    </ul>
  `,
          background: "#1f1f1f",
          color: "#e0e0e0",
          iconColor: "#ff5252",
          confirmButtonColor: "#00bcd4"
        });
        return false
      } else if (!/^\d{10}$/.test(phone)) {
        Swal.fire({
          icon: "error",
          title: "Invalid Phone",
          text: "Enter a valid 10-digit phone number.",
          background: "#1f1f1f",
          color: "#e0e0e0",
          iconColor: "#ff5252",
          confirmButtonColor: "#00bcd4"
        });
        return false
      }
      e.target.submit();
      return true
    }



  </script>



  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const message = "{{message}}";
      if (message && message.trim() !== "") {
        Swal.fire({
          icon: "info",
          title: "Notice",
          text: message,
          background: "#1f1f1f",
          color: "#e0e0e0",
          iconColor: "#00bcd4",
          confirmButtonColor: "#00bcd4"
        });

      }

      document.querySelector('form').addEventListener('submit', formValidation);
    });
  </script>


  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function togglePassword(id, icon) {
      const input = document.getElementById(id);
      const type = input.type === "password" ? "text" : "password";
      input.type = type;
      icon.classList.toggle("bi-eye");
      icon.classList.toggle("bi-eye-slash");
    }


  </script>
</body>

</html>