  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    (function(){
      var popup = document.getElementById('welcomePopup');
      var cta = document.getElementById('expertCta');
      var hasShown = false;
      // Ensure DOM is ready before querying elements that appear later in the HTML
      function initHero(){ try { document.querySelector('.hero').classList.add('loaded'); } catch(e) {} }
      function getRevealEls(){ return Array.prototype.slice.call(document.querySelectorAll('.reveal')); }
      function onScrollReveal(){
        var revealEls = getRevealEls();
        var vh = window.innerHeight || document.documentElement.clientHeight;
        revealEls.forEach(function(el){
          var rect = el.getBoundingClientRect();
          if(rect.top < vh - 80){ el.classList.add('in-view'); }
        });
      }
      window.addEventListener('DOMContentLoaded', function(){ initHero(); onScrollReveal(); });
      window.addEventListener('load', onScrollReveal);
      window.addEventListener('scroll', onScrollReveal);
      // Clean interactions only (no tilt/ripples)
      function showPopup(){
        if(hasShown) return;
        hasShown = true;
        popup.style.display = 'block';
        popup.style.opacity = '0';
        popup.style.transform = 'translateY(12px)';
        requestAnimationFrame(function(){
          popup.style.transition = 'opacity 280ms ease, transform 280ms ease';
          popup.style.opacity = '1';
          popup.style.transform = 'translateY(0)';
        });
        setTimeout(hidePopup, 4000);
        setTimeout(showCta, 1200);
      }
      function hidePopup(){
        popup.style.opacity = '0';
        popup.style.transform = 'translateY(12px)';
        setTimeout(function(){ popup.style.display = 'none'; }, 300);
      }
      function showCta(){
        if(!cta) return;
        cta.style.display = 'block';
        cta.style.opacity = '0';
        cta.style.transform = 'translateY(12px)';
        requestAnimationFrame(function(){
          cta.style.transition = 'opacity 280ms ease, transform 280ms ease';
          cta.style.opacity = '1';
          cta.style.transform = 'translateY(0)';
        });
      }
      window.addEventListener('scroll', function onScroll(){
        if(window.scrollY > 50){
          showPopup();
          window.removeEventListener('scroll', onScroll);
        }
      });
      // Quick View interactions (bind after DOM is ready so cards exist)
      window.addEventListener('DOMContentLoaded', function(){
        var modal = document.getElementById('quickView');
        var modalImg = document.getElementById('modalImage');
        var modalTitle = document.getElementById('modalTitle');
        var modalSub = document.getElementById('modalSub');
        var modalFeatures = document.getElementById('modalFeatures');
        var modalSpecs = document.getElementById('modalSpecs');
        var modalPrice = document.getElementById('modalPrice');
        var modalDesc = document.getElementById('modalDesc');
        
        function openModalFromCard(card){
          var imgEl = card.querySelector('img');
          var titleEl = card.querySelector('h5');
          var subEl = card.querySelector('p');
          var features = (card.getAttribute('data-features') || '').split(';');
          var price = card.getAttribute('data-price') || '';
          var specsRaw = card.getAttribute('data-specs') || '{}';
          var desc = card.getAttribute('data-desc') || '';
          var specsObj = {};
          try { specsObj = JSON.parse(specsRaw); } catch(e) { specsObj = {}; }
          modalImg.src = imgEl ? imgEl.src : '';
          modalTitle.textContent = titleEl ? titleEl.textContent : 'BMW Model';
          modalSub.textContent = subEl ? subEl.textContent : 'Premium BMW model';
          if(price){ modalPrice.style.display = 'inline-block'; modalPrice.textContent = price; } else { modalPrice.style.display = 'none'; }
          modalDesc.textContent = desc;
          modalFeatures.innerHTML = '';
          features.forEach(function(f){
            var t = f.trim(); if(!t) return;
            var li = document.createElement('li');
            var dot = document.createElement('span'); dot.className = 'feature-dot';
            var text = document.createElement('span'); text.textContent = t;
            li.appendChild(dot); li.appendChild(text);
            modalFeatures.appendChild(li);
          });
          modalSpecs.innerHTML = '';
          Object.keys(specsObj).forEach(function(key){
            var li = document.createElement('li');
            var k = document.createElement('span'); k.className = 'specs-key'; k.textContent = key;
            var v = document.createElement('span'); v.textContent = specsObj[key];
            li.appendChild(k); li.appendChild(v);
            modalSpecs.appendChild(li);
          });
          modal.classList.add('show');
          modal.setAttribute('aria-hidden', 'false');
        }
        document.querySelectorAll('.model-grid .card').forEach(function(card){
          card.addEventListener('click', function(e){
            var viewBtn = e.target.closest('.view-details');
            var bookBtnEl = e.target.closest('.book-btn');
            if(viewBtn){
              e.preventDefault();
              // Do not open modal here; a separate handler shows the details popup
              return;
            }
            // Do nothing for generic card clicks or Book Now here (handled elsewhere)
          });
        });
        modal.addEventListener('click', function(e){
          if(e.target === modal || e.target.classList.contains('modal-close')){
            modal.classList.remove('show');
            modal.setAttribute('aria-hidden', 'true');
            return;
          }
          var detailsBtn = e.target.closest('.modal-actions .btn-outline');
          if(detailsBtn){
            e.preventDefault();
            try{ document.getElementById('modalMoreSpecs').style.display = 'block'; }catch(err){}
            return;
          }
          var bookBtn = e.target.closest('.modal-actions .btn-primary');
          if(bookBtn){
            e.preventDefault();
            try {
              var ENDPOINT = 'https://script.google.com/macros/s/AKfycbxgz-_VNHtMVWKzppR2gLJ8rPOm1iXqVVZV1ueCl4cfA5QQLL3f1GRDEs_mIWReojAk/exec';
              var carText = (modalTitle.textContent || 'BMW');
              var priceText = (document.getElementById('modalPrice').style.display !== 'none') ? document.getElementById('modalPrice').textContent : '';
              var imgSrc = document.getElementById('modalImage').getAttribute('src') || '';
              var params = new URLSearchParams();
              params.set('car', carText);
              params.set('price', priceText);
              params.set('image', imgSrc);
              params.set('source', 'modal');
              params.set('userName', '{{userName}}');
              params.set('userEmail', '{{userEmail}}');
              params.set('userPhone', '{{userPhone}}');
              params.set('timestamp', new Date().toISOString());
              fetch(ENDPOINT, { method: 'POST', mode: 'no-cors', headers: { 'Content-Type': 'application/x-www-form-urlencoded;charset=UTF-8' }, body: params.toString() })
                .catch(function(){});
